
<div id="profile_main">
	<h1>LBC REPORT</h1>
	<div id="profile_userinfo">
		<div id="profile_user">
			<h4>username:<%= @user.username %></h4>
			<h4>notoriety:</h4>
			<h4>last violation:</h4>
		</div>
		<div id="profile_userbio">
			<h4 align="center">criminal profile</h4>
			<p><%= @user.bio %></p>
		</div>
	</div>
	<div id="profile_history">
		<h4>Detail of Events</h4>
		<ul>
		<% @user.posts.each do |post| %>
		<li><%= post.body %> (<%= link_to "X", post_path(post), method: "delete" %>)</li>
	<% end %>
		</ul>

	<p><%= link_to "New Crime!", new_post_path %></p><br><br> 


	
	
	</div>
</div>	



